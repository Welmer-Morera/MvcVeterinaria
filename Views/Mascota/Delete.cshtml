@model Mascota
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<br>
<h2 class="text-info">Informacionde la mascota</h2>
<br>

<form method="post" asp-action="Delete" id="formDeleteMascota">
    <div class="container">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Id" class="col-form-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Id" readonly class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Nombre" class="col-form-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Nombre" readonly class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Edad" class="col-form-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Edad" readonly class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Dueño" class="col-form-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Dueño" readonly class="form-control">
            </div>
        </div>
        <div class="form-group-row">
            <div class="row">
                <div class="col-3">
                    @* <input type="submit"    asp-asp-routeid="@Model" class="btn btn-danger form-control"  value="Eliminar Datos"/>    *@

                    <button
                        asp-asp-routeid="@Model"
                        class="btn btn-danger form-control"
                        id="btnEliminarMacota"
                    >
                        <i class="far fa-trash-alt"></i>
                        
                        Eliminar
                    </button>
                </div>
                <div class="col-3">
                    <a asp-action="Index" asp-controller="Mascota" class="btn btn-info form-control">
                        Volver a la lista de mascotas
                    </a>
                </div>
            </div>

        </div>

    </div>


</form>


<script>
    $(function () {

        $("#btnEliminarMacota").click(function (e) {
            e.preventDefault() 
          Swal.fire({
            title: 'Esta Seguro?',
            text: "Desea Eliminar los datos de la Mascota?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Si, Eliminar!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire(
                'Deleted!',
                'Your file has been deleted.',
                'success'
                )
                $("#formDeleteMascota").submit();
            }
}) 
        })
    });
</script>