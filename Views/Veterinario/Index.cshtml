@model IEnumerable<MvcVeterinaria.Models.Veterinario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row text-center">
    <form asp-action="Index" method="get">
        <div class="form-group row">
            <div class="col-4 text-right">
                <label class="col-form-label">Busqueda</label>
            </div>
            <div class="col-2 ">
                <input type="text" name="Busqueda" class="form-control" />
            </div>
            <div class="col-4  text-left">
                <input type="submit" value="Filtrar" class="btn btn-secondary " />
                <a asp-action="Index" class="btn btn-light">
                    <i class="fas fa-undo-alt"></i>
                </a>
            </div>
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experiencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradoAcademico)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Especialidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Experiencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GradoAcademico)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
