@model Mascota
@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<br>
<br>
<h1 class="text text-primary text-center"> Registro de Mascotas</h1>
<br>
<br>
<div class="col-8 border-rigth ">
    @* paso uno poner u id  para identificar *@
    <form method="post" asp-action=Create id="formCreateMascota">

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Id" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Id" readonly value="@ViewBag.Iden" class="form-control" />
            </div>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Nombre" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Edad" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Edad" class="form-control" />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Due単o" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Due単o" class="form-control" />
                <span asp-validation-for="Due単o" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-5">
                <div class="row">
                    <div class="col-6">
@* borramos o cometamos el input  y creamos  un button*@
@* le ponemos un ID*@
                        <button 
                        id="btnGuardar" 
                        class=" btn btn-success form-control >
                        <span class="btn-label"
                        >
                            <i class="fa fa-save"></i></span>
                            Guardar
                        </button>

                        @* <input type="submit" class="btn btn-success form-control " value="Guardar"

                            /> *@

                    </div>
                    <div class="col-6">
                        <a asp-action="Index" asp-controller="Mascota" class="btn btn-secondary form-control">
                            Cancelar
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </form>


</div>

<script>/// etiquet para escribir codigo java Scripp
    $(function () { // el signo de dolar para identificar

        $("#btnGuardar").click(function (e) { // se単ala al boton cunado le de click realiza una funcion por evento y  e significa evento
            e.preventDefault()
            Swal.fire('Guardado con Exito!',).then($("#formCreateMascota").submit())
           // despues de la alerta  eso signiifca then luego  hace el submit al formulario 
        })
    });
</script> 