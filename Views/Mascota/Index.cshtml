
@model IEnumerable<Mascota>

@{
    ViewData ["Title"] = "Mascotas";
    Layout ="~/Views/Shared/_layout.cshtml";
}

<br>
<br>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text -info">Lista de Mascotas</h2>
        </div>
        <div class="col-6 text-right">
            <p>
                <a asp-action="Create"  asp-controller="Mascota" class="btn btn-primary">
                    <i class=" fa fa-plus"></i>
                    Registar marcotas
                </a>
            </p>
        </div>
    </div>
    <br>
    <div> 
        @if(Model.Count()> 0)
            {
                <table class="table table -striped border" >
                    <tr class="table-primary">
                        <th>@Html.DisplayNameFor(m=> m.Id)</th>
                        <th>@Html.DisplayNameFor(m=> m.Nombre)</th>
                        <th>@Html.DisplayNameFor(m=> m.Edad)</th>
                        <th>@Html.DisplayNameFor(m=> m.Dueño)</th>
                        <th>Acciones</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m=> item.Id)</td>
                            <td>@Html.DisplayFor(m=> item.Nombre)</td>
                            <td>@Html.DisplayFor(m=> item.Edad)</td>
                            <td>@Html.DisplayFor(m=> item.Dueño)</td>
                            <td style="width: 150px;">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-success text-white" asp-action="Edit" asp-route-Id="@item.Id">
                                        <i class=" fas fa-edit"></i> Editar
                                        
                                    </a>
                                    <a class="btn btn-warning text-white" asp-action="Details" asp-route-Id="@item.Id">
                                        <i class=" fas fa-list-alt"></i> Detalles 
                                    </a>
                                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                                        <i class=" fas fa-trash-alt"></i> Eliminar
                                    </a>
                                </div>

                            </td>
                        </tr>
                    }
                </table> 
            }
            else{
                <h1 style="color:red;">No hay mascotas Registradas</h1>
            }
    </div>
</div>